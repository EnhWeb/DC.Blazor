@page "/SyncSessionStorage"
@layout MainLayout
@inject ISyncSessionStorageService sessionStorage

<h1>非异步会话存储</h1>

<div class="row mb-5">

    <div class="col-md-4">
        <h5>将项目添加到会话存储</h5>
        <div class="input-group">
            <input class="form-control" type="text" placeholder="Enter a value" @bind="Name" />
            <div class="input-group-append">
                <button class="btn btn-primary" @onclick="SaveName">保存</button>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <h5>Remove item from session storage</h5>
        <button class="btn btn-primary" @onclick="RemoveName">移除项目</button>
    </div>

    <div class="col-md-4">
        <h5>Clear session storage</h5>
        <button class="btn btn-primary" @onclick="ClearSessionStorage">全部清除</button>
    </div>
</div>

<div class="row">

    <div class="col-md-4">
        <h5>从会话存储读取值</h5>
        @NameFromSessionStorage
    </div>

    <div class="col-md-4">
        <h5>会话存储中的项目</h5>
        @ItemsInSessionStorage
    </div>
</div>

@code {

    string NameFromSessionStorage { get; set; }
    int ItemsInSessionStorage { get; set; }
    string Name { get; set; }

    protected override void OnInitialized()
    {
        GetNameFromSessionStorage();
        GetSessionStorageLength();

        sessionStorage.Changed += (sender, e) =>
        {
            Console.WriteLine($"键{e.Key}的值从{e.OldValue}更改为{e.NewValue}");
        };
    }

    void SaveName()
    {
        sessionStorage.SetItem("name", Name);
        GetNameFromSessionStorage();
        GetSessionStorageLength();

        Name = "";
    }

    void GetNameFromSessionStorage()
    {
        NameFromSessionStorage = sessionStorage.GetItem<string>("name");

        if (string.IsNullOrEmpty(NameFromSessionStorage))
        {
            NameFromSessionStorage = "没有值";
        }
    }

    void RemoveName()
    {
        sessionStorage.RemoveItem("name");
        GetNameFromSessionStorage();
        GetSessionStorageLength();
    }

    void ClearSessionStorage()
    {
        Console.WriteLine("开始清除...");
        sessionStorage.Clear();
        Console.WriteLine("正在从本地存储获取键名的值...");
        GetNameFromSessionStorage();
        Console.WriteLine("开始获取长度...");
        GetSessionStorageLength();
    }

    void GetSessionStorageLength()
    {
        Console.WriteLine(sessionStorage.Length());
        ItemsInSessionStorage = sessionStorage.Length();
    }

}
