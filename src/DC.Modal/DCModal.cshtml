@inherits DCModalBase

<div class="dc-modal-container @(IsVisible ? "dc-modal-active" : string.Empty)">

    <div class="dc-modal-overlay" onclick="@CloseModal"></div>

    <div class="dc-modal">
        <div class="dc-modal-header">
            <h3 class="dc-modal-title">@Title</h3>
            <button type="button" class="dc-modal-close" onclick="@CloseModal">
                <span>&times;</span>
            </button>
        </div>
        <div class="dc-modal-content">
            <CascadingValue Value="@Parameters">
                @Content
            </CascadingValue>
        </div>
    </div>
</div>